using System;

class Program
{
    public static string poi(int num1)
    {
        if (num1 % 2 == 0)
            return "Par";
        else
            return "Ímpar";
    }

    static void Main()
    {
        Console.Write("Digite um número: ");
        int num1 = int.Parse(Console.ReadLine());

        string resultado = poi(num1);
        Console.WriteLine($"O número é: {resultado}");
    }
}
