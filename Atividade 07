using System;
class Program
{
    public static string impar(string x)
    {
       string resultado = "";
        for( int i = 0; i < x.Length; i++){
            if(i % 2 != 0){
                resultado += x[i];
            }
        }
        return resultado;
    }

    static void Main()
    {
        Console.Write("Digite uma palavra: ");
        string palavra = Console.ReadLine();

        string resultadofinal = impar(palavra);
        Console.WriteLine(resultadofinal);
    }
}
